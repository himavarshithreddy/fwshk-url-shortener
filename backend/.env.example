# Upstash Redis REST API credentials (required)
UPSTASH_REDIS_REST_URL=your_upstash_redis_rest_url
UPSTASH_REDIS_REST_TOKEN=your_upstash_redis_rest_token

# Frontend origin for CORS (e.g., https://fwshk-frontend.vercel.app)
FRONTEND_URL=

# Server port (optional, default: 3001)
PORT=3001

# --- Rate Limiting (optional, defaults shown) ---
RATE_LIMIT_PER_MIN=5
RATE_LIMIT_PER_HOUR=50
RATE_LIMIT_SUBNET_PER_MIN=30
RATE_LIMIT_SUBNET_PER_HOUR=200

# --- URL Safety (optional) ---
# Google Safe Browsing API key for URL scanning
GOOGLE_SAFE_BROWSING_API_KEY=
# Minimum domain trust score (0-100, default: 20)
MIN_TRUST_SCORE=20

# --- CAPTCHA (optional) ---
# reCAPTCHA v3 secret key (only triggered for suspicious requests)
RECAPTCHA_SECRET_KEY=
# reCAPTCHA score threshold (0.0-1.0, default: 0.5)
CAPTCHA_SCORE_THRESHOLD=0.5

# --- Monitoring (optional) ---
# API key to protect the monitoring dashboard endpoint
MONITORING_API_KEY=
# Kill switch: max malicious links before auto-disable (default: 10)
KILLSWITCH_MALICIOUS_THRESHOLD=10
# Kill switch: time window in ms (default: 300000 = 5 minutes)
KILLSWITCH_WINDOW_MS=300000
# Kill switch: cooldown duration in ms (default: 900000 = 15 minutes)
KILLSWITCH_COOLDOWN_MS=900000
